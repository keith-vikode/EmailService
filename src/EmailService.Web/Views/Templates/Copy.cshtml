@using EmailService.Web.ViewModels.Templates
@model CopyTemplateViewModel
@{
    ViewBag.Title = $"Copy {Model.TemplateName}";
}

<form asp-action="Copy" asp-controller="Templates" method="post">
    <input asp-for="TemplateId" type="hidden" />
    <input asp-for="TemplateName" type="hidden" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label>Current name</label>
        <p class="form-control-static">@Model.TemplateName</p>
    </div>
    <div class="form-group">
        <label asp-for="NewName">New template name</label>
        <input asp-for="NewName" class="form-control" />
        <span asp-validation-for="NewName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Description for the new template</label>
        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Copy</button>
</form>